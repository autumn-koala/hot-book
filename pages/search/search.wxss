/* pages/search/search.wxss */

.back-bar{
  width: 100%;
  height: 116rpx;
  padding: 60rpx 30rpx 20rpx;
  box-sizing: border-box;
  background: #fff;
}
.back{
  width: 18rpx;
  height: 37rpx;
}
/* 搜索 */
.search{
  height: 134rpx;
  width: 100%;
  padding: 20rpx 40rpx 20rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  top: 0;
  background: #fff;
  z-index: 999;
  margin-top: 128rpx;
}
.search-input{
  width: calc(100% - 80rpx);
  height: 70rpx;
  border: 1rpx solid #000;
  border-radius: 10rpx;
  position: relative;
  font-size: 24rpx;
  font-weight: 400;
  color: #000;
  padding-left: 70rpx;
}
.input-placeholder{
  font-size: 24rpx;
  font-weight: 400;
  color: #bdbdbd;
}
.search-icon{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: 45rpx;
  left: 60rpx;
  z-index:100;
}

/* 历史记录 */
.history{
  margin: 144rpx 40rpx 40rpx;
}
.history.hot{
  margin-top: 40rpx;
}
.history .title{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.title-text{
  font-size: 24rpx;
  font-weight: 500;
  color: #000;
}
.delete{
  width: 26rpx;
  height: 25rpx;
} 
.history-list{
  margin-top: 40rpx;
}
.history-item{
  font-size: 24rpx;
  font-weight: 400;
  padding: 15rpx 25rpx;
  border: 1rpx solid #bdbdbd;
  border-radius: 26rpx;
  display: inline-block;
  margin: 0 20rpx 20rpx 0;
}
.hot-icon{
  width: 22rpx;
  height: 26rpx;
  margin-right: 10rpx;
}