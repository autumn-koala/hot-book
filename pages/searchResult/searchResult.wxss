/* pages/searchResult/searchResult.wxss */
/* 搜索 */
.search{
  height: 218rpx;
  width: 100%;
  padding: 128rpx 40rpx 20rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  top: 0;
  background: #fff;
  z-index: 999;
}
.search-input{
  width: calc(100% - 80rpx);
  height: 70rpx;
  border: 1rpx solid #000;
  border-radius: 10rpx;
  position: relative;
  font-size: 24rpx;
  font-weight: 400;
  color: #000;
  padding-left: 70rpx;
}
.input-placeholder{
  font-size: 24rpx;
  font-weight: 400;
  color: #bdbdbd;
}
.search-icon{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: 150rpx;
  left: 60rpx;
}
.close{
  width: 29rpx;
  height: 29rpx;
  position: absolute;
  top: 150rpx;
  right: 60rpx;
}

/* 搜索结果 */
.search-result{
  margin: 158rpx 40rpx 40rpx;
}

/* 无搜索结果 */
.search_nc{
  margin: 300rpx 0 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.search-nothing{
  width: 200rpx;
  height: 135rpx;
}
.search_tip{
  font-size: 24rpx;
  height: 400;
  color: #bdbdbd;
  margin-top: 40rpx;
}
/* 有搜索结果 */
.search_hc_title{
  font-size: 24rpx;
  font-weight: 400;
  color: #bdbdbd;
}
.foodlist{
  width: 670rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.foodlist .fooditem{
  display: flex;
  flex-direction: column;
  width: 325rpx;
  margin-right: 20rpx;
  margin-bottom: 60rpx;
}
.foodlist .fooditem:nth-of-type(2n){
  margin-right: 0;
}
.foodPic{
  width: 100%;
  height: 325rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  position: relative;
}
.like{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.likeimg{
  width: 28rpx;
  height: 26rpx;
  margin-bottom: 10rpx;
}
.number{
  font-size: 20rpx;
  font-weight: 400;
  color: #fff;
}
.sign{
  position: absolute;
  left: 15rpx;
  bottom: 15rpx;
  display: flex;
  flex-direction: row;
}
.sign-photo{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.photo{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.food-name{
  font-size: 28rpx;
  font-weight: 500;
  color: #000;
  margin-bottom:15rpx; 
}
.price-position{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}
.price{
  color: #ff5555;
  font-size: 24rpx;
  font-weight: 500;
}
.food-cate{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10rpx 15rpx;
  background: #fff;
  border-radius: 5rpx;
  border: 1rpx solid #acacac;
}
.distance{
  font-size: 18rpx;
  font-weight: 400;
  color:#acacac;
}